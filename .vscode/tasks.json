{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sam-build-and-debug-go",
            "type": "shell",
            // Command runs SAM build, then invokes the function while starting Delve on port 5858.
            "command": "sam build && sam local invoke --template-file template.yaml HelloWorldFunction --event event.json --debug-args \"-delveAPI=dlv,public=true,hosts=[\\\"0.0.0.0\\\"]\" --debug-port 5858",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    // CRITICAL: This pattern waits for SAM/Delve to indicate it's ready to attach.
                    // If you change this, you may need a different pattern depending on your SAM CLI version.
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Debugger event loop running." 
                    }
                }
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        // Required task to kill the background SAM process started by the preLaunchTask.
        {
            "label": "terminate-sam-session",
            "type": "process",
            "command": "echo",
            "problemMatcher": [],
            "dependsOn": ["sam-build-and-debug-go"],
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}
