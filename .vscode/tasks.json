{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sam-build-and-debug-go",
            "type": "shell",
            // Command runs SAM build, then invokes the function while starting Delve on port 5858.
            "command": "sam build && sam local invoke --template-file template.yaml HelloWorldFunction --event event.json --debug-port 5858",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        // Task to start local API Gateway
        {
            "label": "sam-start-api",
            "type": "shell",
            "command": "sam local start-api --port 3001",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        // Task to invoke Lambda via API Gateway (run after start-api)
        {
            "label": "invoke-api",
            "type": "shell",
            "command": "curl http://localhost:3001/hello",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
